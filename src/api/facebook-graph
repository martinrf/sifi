// TODO: Change this to use Axios and remove request dependency.
const request = require('request');
const axios = require('axios');

class FacebookAPI {

  async send(payload) {
    const requestData = {
      'url': process.env.FACEBOOK_GRAPH_API + '/me/messages',
      'qs': { 'access_token': process.env.MESSENGER_API_TOKEN },
      'method': 'post',
      'json': payload
    };
    return await request(requestData);
  }

  /***
   * Gets user profile data from Facebook.
   * @param userId
   * @returns {Promise<*>}
   */
  async getUserProfileData (userId) {
    const url = process.env.FACEBOOK_GRAPH_API + '/' + userId;
    const response = await axios.get(url, {
      'method': 'get',
      'params': {
        'fields': 'first_name,last_name,profile_pic,locale,timezone,gender',
        'access_token': process.env.MESSENGER_API_TOKEN
      }
    });
    return response.data;
  }
}

module.exports = new FacebookAPI();
